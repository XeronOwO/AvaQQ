<Window xmlns="https://github.com/avaloniaui"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:vm="using:AvaQQ.ViewModels"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:views="clr-namespace:AvaQQ.Views"
				mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
				x:Class="AvaQQ.Views.LogWindow"
				x:DataType="vm:LogViewModel"
				Icon="/Assets/logo.ico"
				Title="{Binding TextLogs}"
				Width="800"
				Height="600"
				WindowStartupLocation="CenterOwner">
	<Design.DataContext>
		<vm:LogViewModel/>
	</Design.DataContext>
	
	<Grid RowDefinitions="* auto">
		<TextBox IsReadOnly="True"
						 Text="{Binding Content}"
						 Grid.Row="0"
						 TextWrapping="Wrap"/>
		<Button Content="{Binding TextCopy}"
						Grid.Row="1"
						HorizontalAlignment="Stretch"
						HorizontalContentAlignment="Center"
						Click="ButtonCopyLog_Click"/>
	</Grid>
</Window>
