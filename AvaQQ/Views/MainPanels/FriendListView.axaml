<UserControl xmlns="https://github.com/avaloniaui"
						 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
						 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
						 xmlns:vm="using:AvaQQ.ViewModels.MainPanels"
						 xmlns:mp="clr-namespace:AvaQQ.Views.MainPanels"
						 mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="500"
						 x:Class="AvaQQ.Views.MainPanels.FriendListView"
						 x:DataType="vm:FriendListViewModel">
	<Design.DataContext>
		<vm:FriendListViewModel/>
	</Design.DataContext>
	
	<Grid RowDefinitions="auto *">
		<!-- 搜索 -->
		<TextBox Grid.Row="0"
						 Watermark="{Binding FilterWatermark}"/>
		
		<!-- 列表 -->
		<ScrollViewer x:Name="scrollViewer"
									Grid.Row="1">
			<StackPanel x:Name="stackPanel">
				<Grid x:Name="grid">
				</Grid>
			</StackPanel>
		</ScrollViewer>
	</Grid>
</UserControl>
