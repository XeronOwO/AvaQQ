<UserControl xmlns="https://github.com/avaloniaui"
						 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
						 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
						 mc:Ignorable="d" d:DesignWidth="20" d:DesignHeight="20"
						 x:Class="Onebot11ForwardWebSocketAdapter.SpinnerControl">
	<Grid>
		<Grid.Styles>
			<Style Selector="Arc#Arc2">
				<Style.Animations>
					<Animation IterationCount="Infinite" Duration="0:0:1">
						<KeyFrame Cue="0%">
							<Setter Property="RotateTransform.Angle" Value="0" />
						</KeyFrame>
						<KeyFrame Cue="50%">
							<Setter Property="RotateTransform.Angle" Value="180" />
						</KeyFrame>
						<KeyFrame Cue="100%">
							<Setter Property="RotateTransform.Angle" Value="360" />
						</KeyFrame>
					</Animation>
				</Style.Animations>
			</Style>
		</Grid.Styles>
		<Arc x:Name="Arc1"
				 StartAngle="0"
				 Opacity="0.3"
				 Stroke="{DynamicResource ControlTextBrush}"
				 StrokeThickness="3"
				 SweepAngle="360" />

		<Arc x:Name="Arc2"
				 StartAngle="-225"
				 Stroke="{DynamicResource ControlTextBrush}"
				 StrokeThickness="3"
				 SweepAngle="90" />
	</Grid>
</UserControl>
